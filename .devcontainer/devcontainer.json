{
    "name": "Tailscale-enabled Developer Environment",
    //"dockerFile": "Dockerfile",
    "image": "ghcr.io/gbraad-devenv/fedora/base:37",
    "context": "..",
    "runArgs": [ "--cap-add=NET_ADMIN", "--cap-add=NET_RAW", "--device=/dev/net/tun" ],
    "postStartCommand": "github/install.sh && nohup bash -c 'sudo /etc/init.d/tailscaled start &' && sudo tailscale up",
    //, "features": {
    //    "ghcr.io/tailscale/codespace/tailscale": {}
    //}
    "extensions": [
         "ms-vscode.Theme-TomorrowKit",
         "ritwickdey.LiveServer"
    ]
}
